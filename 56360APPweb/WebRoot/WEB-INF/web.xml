	 <!-- 配置过滤器   禁止同一ip频繁访问   start -->  
    <filter>  
        <filter-name>IPFilter</filter-name>  
        <filter-class>com.kuheng.filter.IPFilter</filter-class>  
    </filter>  
    <filter-mapping>  
        <filter-name>IPFilter</filter-name>  
        <url-pattern>/*</url-pattern>  
    </filter-mapping>  
    <!-- 配置过滤器 end -->  
          
    <!-- 配置监听器  监听ip   禁止同一ip频繁访问  start -->  
    <listener>  
        <listener-class>com.kuheng.filter.MyListener</listener-class>  
    </listener>  
    <!-- 配置监听器 start -->  
    
    
    
    
    
